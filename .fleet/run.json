{
    "configurations": [
        {
            "name": "AndroidApp",
            "type": "android-app",
            "workingDir": "$PROJECT_DIR$",
            "allowParallelRun": true,
            "module": "BoilerPlate.composeApp.main",
            "destination": "Pixel 7 Pro API 34",
        },
        
        {
            "name": "iosApp-14",
            "type": "xcode-app",
            "workingDir": "$PROJECT_DIR$",
            "buildTarget": {
                "project": "iosApp",
                "target": "iosApp"
            },
            "configuration": "Debug",
            "destination": "iPhone 14 | iOS 17.0"
        },

        {
            "name": "iosApp-15-Pro-Max",
            "type": "xcode-app",
            "workingDir": "$PROJECT_DIR$",
            "buildTarget": {
                "project": "iosApp",
                "target": "iosApp"
            },
            "configuration": "Debug",
            "destination": "iPhone 15 Pro Max | iOS 17.0"
        },

        {
            "name": "desktopApp",
            "type": "gradle",
            "workingDir": "$PROJECT_DIR$",
            "tasks": [
                "desktopRun"
            ],
            "args": [
                "-DmainClass=com.alithya.boilerplate.MainKt",
                "--quiet",
                "-p",
                "$PROJECT_DIR$/composeApp"
            ],
            "initScripts": {
                "flmapper": "ext.mapPath = { path -> null }"
            }
        }
        
    ]
}